<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Symptoms"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Symptom Inputs -->
            <!-- Symptom 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/symptom1"
                android:text="Symptom 1"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/symptom1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Symptom 1"
                android:inputType="text" />

            <!-- Symptom  2-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/symptom2"
                android:text="Symptom 2"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/symptom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Symptom 2"
                android:inputType="text" />

            <!-- Symptom 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/symptom3"
                android:text="Symptom 3"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/symptom3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Symptom 3"
                android:inputType="text" />

            <!-- Symptom 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/symptom4"
                android:text="Symptom 4"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/symptom4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Symptom 1"
                android:inputType="text" />

            <!-- Symptom 5 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/symptom5"
                android:text="Symptom 5"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/symptom5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Symptom 1"
                android:inputType="text" />

            <!-- Symptom 6 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/symptom6"
                android:text="Symptom 6"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/symptom6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Symptom 1"
                android:inputType="text" />

            <!-- Symptom 7 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/symptom7"
                android:text="Symptom 7"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/symptom7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Symptom 1"
                android:inputType="text" />

            <!-- Symptom 8 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/symptom8"
                android:text="Symptom 8"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/symptom8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Symptom 1"
                android:inputType="text" />

        </LinearLayout>
    </ScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/Clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/Submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
